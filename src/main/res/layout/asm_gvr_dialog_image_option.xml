<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="bindingCallback"
            type="com.alcodes.alcodessmgalleryviewer.databinding.bindingcallbacks.AsmGvrDialogImageOptionCallback" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_open_image_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:paddingStart="10dp"
            android:background="@color/design_default_color_background"
            android:onClick="@{() -> bindingCallback.onBtnOpenImageFileOnWebBrowserClick()}"
            android:text="@string/btnOpenImageUrl" />

        <Button
            android:id="@+id/button_set_image_as_wallpaper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:paddingStart="10dp"
            android:background="@color/design_default_color_background"
            android:onClick="@{() -> bindingCallback.onBtnSetWallpaperClick()}"
            android:text="@string/btnSetWallpaper" />

    </LinearLayout>

</layout>