<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <RelativeLayout
        android:id="@+id/preview_video_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background">

            <LinearLayout
                android:id="@+id/preview_video_notifier_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/preview_video_no_internet"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/preview_video_cache"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/preview_video_image_loading"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerInside"
                android:layout_centerInParent="true" />

        <com.alcodes.alcodessmgalleryviewer.views.AsmGvrStateBroadcastingVideoView
                android:id="@+id/preview_video_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:id="@+id/root_video_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:visibility="invisible"
                android:padding="16dp"
                android:background="@color/cardview_dark_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_view_for_details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/design_default_color_background" />

                <RelativeLayout
                    android:id="@+id/video_view_date_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp">

                    <ImageView
                        android:id="@+id/video_view_date_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/asm_gvr_calendar"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/video_view_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/video_view_date_icon"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/design_default_color_background" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/video_view_path_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/asm_gvr_file_location"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/video_view_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/video_view_path_icon"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/design_default_color_background" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/video_view_file_name_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/asm_gvr_file_name"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/video_view_file_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/video_view_file_name_icon"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/design_default_color_background" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/video_view_duration_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/asm_gvr_time"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/video_view_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/video_view_duration_icon"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/design_default_color_background" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/video_view_res_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/asm_gvr_file_type"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/video_view_res"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/video_view_res_icon"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/design_default_color_background" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/video_view_video_codec_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/asm_gvr_file_type"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/video_view_video_codec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/video_view_video_codec_icon"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/design_default_color_background" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/video_view_audio_codec_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/asm_gvr_file_type"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/video_view_audio_codec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/video_view_audio_codec_icon"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/design_default_color_background" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/video_view_frame_rate_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/asm_gvr_file_type"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/video_view_frame_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/video_view_frame_rate_icon"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/design_default_color_background" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/video_view_file_size_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/asm_gvr_file_type"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/video_view_file_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/video_view_file_size_icon"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/design_default_color_background" />
                </RelativeLayout>
            </LinearLayout>
    </RelativeLayout>
</layout>
